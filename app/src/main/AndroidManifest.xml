<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.heriana.javaaplikasi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JavaFireApplication"
        android:allowBackup="true"
        android:icon="@mipmap/firebase_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/firebase_logo"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">

        <meta-data
            android:name="DATABASE"
            android:value="javalearn.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.heriana.javaaplikasi" />
        <activity
            android:name=".login.LoginActivity"
            android:label="Authentication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register.RegistrationActivity"
            android:label="Authentication" />
        <activity
            android:name=".home.HomeActivity"
            android:label="Learning Java"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".lesson.LessonCategoryActivity"
            android:label="Learning Java"
            android:theme="@style/NoActionBar" />
        <activity android:name=".question.QuestionActivity"
            android:label="Learning Java"
            android:theme="@style/AppTheme"/>
        <activity android:name=".compiler.CompilerActivity"
            android:label="Learning Java"
            android:theme="@style/AppTheme" />
        <activity android:name=".score.SkorActivity" />
        <activity
            android:name=".lesson.LessonReadPDFActivity"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>